
import org.example.model.Order;

rule "HDFC"
when
    $order : Order(cardType == "HDFC" && price > 10000)
then
    $order.setDiscount(10);
    $order.setName("Test");
end

rule "ICICI"
when
    $order : Order(cardType == "ICICI" && price > 15000)
then
    $order.setDiscount(8);
end

rule "DBS"
when
    $order : Order(cardType == "DBS" && price > 15000)
then
    $order.setDiscount(15);
end
